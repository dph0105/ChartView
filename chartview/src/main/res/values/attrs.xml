<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    
    <declare-styleable name="LineChartView">
        <!--x轴宽度-->
        <attr name="xAxisWidth" format="dimension"/>
        <!--x轴颜色-->
        <attr name="xAxisColor" format="color"/>
        <!--y轴宽度-->
        <attr name="yAxisWidth" format="dimension"/>
        <!--y轴颜色-->
        <attr name="yAxisColor" format="color"/>
        <!--折线宽度-->
        <attr name="lineWidth" format="dimension"/>
        <!--折线颜色-->
        <attr name="lineColor" format="color"/>
        <!--绘制图标的区域距离控件的边的距离，类似padding,默认10-->
        <attr name="chartPadding" format="dimension"/>
        <!--x轴文字的颜色-->
        <attr name="xAxisTextColor" format="color"/>
        <!--y轴文字的颜色-->
        <attr name="yAxisTextColor" format="color"/>
        <!--x轴文字的大小-->
        <attr name="xAxisTextSize" format="dimension"/>
        <!--y轴文字的大小-->
        <attr name="yAxisTextSize" format="dimension"/>
        <!--数据为空时显示的文字-->
        <attr name="empty_text" format="string"/>
        <!--数据为空时显示的文字的大小-->
        <attr name="empty_text_size" format="dimension"/>
        <!--数据为空时显示的文字的颜色-->
        <attr name="empty_text_color" format="color"/>

    </declare-styleable>
    
    
</resources>